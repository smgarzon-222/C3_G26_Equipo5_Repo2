<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Torneo.App.Frontend</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/Torneo.App.Frontend.styles.css" asp-append-version="true" />
</head>

<body style = "background-color:rgba(153,153,102,0.2);">

  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success bg-opacity-30 border-bottom box-shadow mb-3">
      <div class="container">
        <a class="navbar-brand fs-1 fw-bolder fst-italic text-light" asp-area="" asp-page="/Index">TORNEO G5</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1 nav-tabs justify-content-end">
            <li class="nav-item">
              <a class="nav-link fs-5 fw-bold fst-italic text-black" asp-area="" asp-page="/Index">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5 fw-bold fst-italic text-black" asp-area="" asp-page="/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5 fw-bold fst-italic text-black" asp-area="" asp-page="/Municipios/Index">Municipios</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5 fw-bold fst-italic text-black" asp-area="" asp-page="/DTs/Index">D.T.</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5 fw-bold fst-italic text-black" asp-area="" asp-page="/Equipos/Index">Equipos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5 fw-bold fst-italic text-black" asp-area="" asp-page="/Posiciones/Index">Posiciones</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5 fw-bold fst-italic text-black" asp-area="" asp-page="/Jugadores/Index">Jugadores</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5 fw-bold fst-italic text-black" asp-area="" asp-page="/Partidos/Index">Partidos</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-black bg-success p-2 text-dark bg-opacity-30">
    <div class="container">
      &copy; 2022 - Torneo.App.Frontend - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
  </footer>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>

  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>